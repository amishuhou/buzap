<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- profile page -->

    <style name="profileLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
    <style name="profileLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="profileValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00FF00</item>
    </style>

    <style name="date">
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#CCCCCC</item>
    </style>

    <style name="orderTitle">
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">none</item>
        <item name="android:maxLines">100</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00FF00</item>
    </style>

    <style name="orderBody">
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">none</item>
        <item name="android:maxLines">100</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- form -->
    <style name="formControl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="formLabel">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="counter_zero">
        <item name="android:textColor">#000000</item>
        <!--<item name="android:background">@drawable/border_counter</item>-->
    </style>
    <style name="counter_non_zero">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF0000</item>
        <!--<item name="android:background">@drawable/border_counter_active</item>-->
    </style>



</resources>
